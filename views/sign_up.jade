include index
  h1 Complete registration
  form(ng-controller='SignUpController' ng-submit="submit()" ng-init='schools = #{schools}')
    //- METHOD: PUT url sign_up/users_id
    table
      tr
        td 
          label(for='email') Email*
        td 
          input(type='email' name='email' ng-model='newUser.email' required size="100")
      tr 
        td
          label(for='school') School
        td
          select(ng-model='newUser.school' ng-options='school.name for school in schools')
            {{ newUser.school }}
      tr 
        td
          label(for='phone_number') Phone number
        td
          input(type='tel' ng-model='newUser.phone_number' name='phone_number')
      tr 
        td
          label(for='intensity') Intensity
        td
          select(ng-model='newUser.intensity' ng-options='intensity for intensity in intensities')

      tr
        td
        td
          input(type="submit" id="submit" value="Submit")