include index
  .groupSearch(ng-controller="findGroupController" ng-init="groups = #{groups}")
    h1 FIND A GROUP
    hr
    input(type='button' ng-click='clicked = !clicked' value='Search by name' ng-attr-class="{{clicked && 'clicked-button' || 'unclicked-button' }}").findGroupButton 
    input(type='button' ng-click='clicked = !clicked; getCourses()' value='Search by course' ng-attr-class="{{clicked && 'clicked-button' || 'unclicked-button' }}").findGroupButton 
    
    input(name='search_for_group' ng-model='searchForGroup' placeholder='search for a group...')#searchForGroup
    .findGroupBox(ng-class='info')
      div(ng-repeat="group in groups | filter:searchForGroup" ng-show='!clicked')
        ul
          li {{ group.name }}
          li.grayed#intensity {{ group.intensity }} intensity
          li.grayed {{ group.motto }}
          li(ng-repeat='user in group.users')
            span {{ user }}
          a(href='/join_group?group_id={{group._id}}')
            input(type='button' model='joinGroup' value='request to join' class='requests find') 
        hr.smaller
      div(ng-repeat="course in courses | filter:searchForGroup" ng-show='clicked')
        ul(ng-repeat='group in course.groups')
          li {{ group.name }}
          li.grayed {{ course.name }}
          li(ng-repeat='user in group.users')
            span {{ user }}
          a(href='/join_group?group_id={{group._id}}')
            input(type='button' model='joinGroup' value='request to join' class='requests find') 
          hr.smaller