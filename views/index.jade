html(lang="en" ng-app='app')
  head
    title Finals Club
    link(type="text/css" rel="stylesheet" href="/css/app.css")      
    script(src="/bower_components/jquery/dist/jquery.min.js") 
    script(src="/bower_components/angular/angular.min.js") 
    script(src="/bower_components/jquery/dist/jquery.min.js") 
    script(src="/bower_components/angular-route/angular-route.min.js") 
    script(src="/browserchannel/dist/bcsocket.js") 
    script(src="/share/webclient/share.js") 
    script(src="/share/webclient/textarea.js") 
    script(src="/js/app.js")
    script(src="/js/masthead.js")    
    script(src="/js/approveRequest.js")
    script(src="/js/createGroup.js")
    script(src="/js/editFlashcards.js")
    script(src="/js/flashcardView.js")
    script(src="/js/groupSearch.js")
    script(src="/js/groupsView.js")
    script(src="/js/homepage.js")
    script(src="/js/signUp.js")
    script(src="/js/topicsView.js")
  body(ng-controller="indexController" ng-class="homepage")
    header#masthead
      nav#login-nav
          if user
            ul
              li
                p
                  a(href="#").username #{user}
                p
                  a(href="/log_out") Log out 
              li.facebook-picture
                img(src='#{image}' width='50px' height='50px')
          else
            .signupDiv
            ul
              li
                a(href="/log_in" class="loginOptions") Sign Up 
              li
                a(href="/log_in" class="loginOptions") Log in
        .wrapper
          a(href='/')
            img(src='/img/logo.png' alt='Finals Club - social note taking' width='312px' height='39px')#logo
          nav#main-nav
            a(href="/groups/search") Find Groups
            a(href="/groups/new") Create a Group
    .fadingWrapper.black_overlay#fade(ng-show="lightbox")
    .contentWrapper
      =yield