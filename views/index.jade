html(lang="en" ng-app='app')
  head
    title Finals Club
    link(type="text/css" rel="stylesheet" href="/css/fonts.css")      
    link(type="text/css" rel="stylesheet" href="/css/app.css")      
    script(src="/bower_components/jquery/dist/jquery.min.js") 
    script(src="/bower_components/angular/angular.js") 
    script(src="/bower_components/jquery/dist/jquery.min.js") 
    script(src="/bower_components/angular-route/angular-route.js") 
    script(src="/js/app.js")
  body
    header#masthead
      nav#login-nav
          if user
            a(href="#").username #{user}
            img(src='#{image}')
            a(href="/log_out") Log out
          else
            a(href="/log_in") Sign Up
            a(href="/log_in") Log in
        .wrapper
          a(href='/')
            img(src='/img/logo.png' alt='Finals Club - social note taking')#logo
          nav#main-nav
            a(href="/groups/search") Find Groups
            a(href="/groups/new") Create a Group
    .wrapper
      =yield

